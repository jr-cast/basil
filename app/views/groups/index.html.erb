<%= render "nav_layout" %>

<div class="groups-container">
<% if @groups.length.zero? %>
  <h3 style="text-align: center; margin-top: 17em;">Start by adding a new category</h3>
<% else%>
  <% @groups.each do |item| %>
    <%= link_to group_bills_path(item.id) do %>
      <div class="group-card">
        <div><%= item.name%></div>
        <div><%= item.icon %></div>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>

<%= render "foot" %>
